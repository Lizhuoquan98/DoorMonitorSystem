<Window x:Class="DoorMonitorSystem.Views.DoorDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:usc="clr-namespace:ControlLibrary;assembly=ControlLibrary"
        mc:Ignorable="d"
        Title="Door Detail" Height="650" Width="1200"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="#1a1f2e"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        UseLayoutRounding="True">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <!-- ä¸»å¼¹çª—è¾¹æ¡† -->
    <Border CornerRadius="15"
            Background="#1a1f2e" BorderBrush="#2a5f8f" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ä¼˜åŒ–åŽçš„æ ‡é¢˜æ ï¼ˆå¯æ‹–åŠ¨ï¼‰ -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0"
                                Padding="20,15"
                                MouseLeftButtonDown="Header_MouseLeftButtonDown"
                                Cursor="Hand">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1e3a5f" Offset="0"/>
                        <GradientStop Color="#2a5f8f" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- é—¨è§†å›¾ï¼ˆåŠ¨æ€å“åº”ï¼‰ -->
                    <Border Grid.Column="0"
                                       Width="45" Height="65"
                                       CornerRadius="5"
                                       Background="#2a5a8f"
                                       Margin="0,0,15,0"
                                       Padding="2">
                        <usc:DoorControl
                                        HeaderText="{Binding SelectedDoor.DoorName}"
                                        HeaderBackground="{Binding SelectedDoor.Visual.HeaderBackground}"
                                        BottomBackground="{Binding SelectedDoor.Visual.BottomBackground}"
                                        IconItems="{Binding SelectedDoor.Visual.Icons}"
                                        BorderThickness="0"
                                        FontSize="11"/>
                    </Border>

                    <!-- æ ‡é¢˜æ–‡å­—ï¼ˆä¼˜åŒ–ï¼‰ -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding PopupTitle}"
                                              FontSize="16" FontWeight="Bold"
                                              Foreground="White"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="ðŸ’¡" FontSize="11" Margin="0,0,5,0"/>
                            <TextBlock Text="æ‹–åŠ¨æ ‡é¢˜æ å¯ç§»åŠ¨çª—å£ â€¢ æŒ‰ ESC å…³é—­"
                                                  FontSize="11"
                                                  Foreground="#a0b0c0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- å…³é—­æŒ‰é’®ï¼ˆä¼˜åŒ–ï¼‰ -->
                    <Button Grid.Column="2"
                                        Margin="10,0,0,0"
                                       Command="{Binding ClosePopupCommand}"
                                       Click="Close_Click"
                                       Width="38" Height="38"
                                       Background="#d32f2f"
                                       BorderThickness="0"
                                       Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8">
                                    <TextBlock Text="âœ•"
                                                          FontSize="18" FontWeight="Bold"
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#f44336"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#c62828"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- ç‚¹ä½è¯¦æƒ…å†…å®¹åŒº -->
            <ScrollViewer Grid.Row="1"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Disabled"
                                     Margin="20,20,20,15"
                                     Background="#141824">
                <ItemsControl ItemsSource="{Binding CategoryGroups}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="8"
                                               CornerRadius="10"
                                               Background="#1a1a2e"
                                               BorderBrush="{Binding Category.BackgroundBrush}"
                                               BorderThickness="2">
                                <StackPanel>
                                    <Border CornerRadius="8,8,0,0"
                                                       Background="{Binding Category.BackgroundBrush}"
                                                       Padding="15,10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Category.Icon}" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Category.Name}" FontSize="16" FontWeight="Bold" Foreground="{Binding Category.ForegroundBrush}"/>
                                            <Border Background="{Binding Category.ForegroundBrush}"
                                                               CornerRadius="10"
                                                               Padding="8,2"
                                                               Margin="8,0,0,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ActiveCount}" Value="0">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding ActiveCount}" FontSize="12" FontWeight="Bold" Foreground="{Binding Category.BackgroundBrush}"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>

                                    <ItemsControl ItemsSource="{Binding Bits}" Padding="10">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Rows="{Binding Category.LayoutRows}" Columns="{Binding Category.LayoutColumns}"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="6"
                                                                   Background="#1e2838"
                                                                   BorderBrush="#3a4555"
                                                                   BorderThickness="1"
                                                                   Margin="3,2"
                                                                   Padding="8,4"
                                                                   SnapsToDevicePixels="True"
                                                                   UseLayoutRounding="True">
                                                    <usc:BitControl Text="{Binding Description}"
                                                                              BITColor="{Binding ConfigColor}"
                                                                              Value="{Binding BitValue}"
                                                                              FontSize="15"
                                                                              Height="28"
                                                                              HorizontalAlignment="Stretch"
                                                                              Foreground="White"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- åº•éƒ¨æç¤º -->
            <Border Grid.Row="2"
                               Background="#0d1117"
                               CornerRadius="0,0,15,15"
                               Padding="20,10"
                               BorderBrush="#2a5f8f"
                               BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="â„¹ï¸" FontSize="11" Margin="0,0,6,0"/>
                    <TextBlock Text="æŒ‰ ESC é”®å¿«é€Ÿå…³é—­  â€¢  æ‹–åŠ¨æ ‡é¢˜æ å¯ç§»åŠ¨çª—å£"
                                          FontSize="11"
                                          Foreground="#7b8a9a"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
