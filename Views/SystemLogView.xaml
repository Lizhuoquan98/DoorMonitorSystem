<UserControl x:Class="DoorMonitorSystem.Views.SystemLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoorMonitorSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1024"
             Background="Transparent">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="CenterText" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>
        
        <Style x:Key="LeftText" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 1. 顶部工具栏 -->
        <Border Grid.Row="0" Background="#1e2430" CornerRadius="5" Padding="10" Margin="0,0,0,10"
                BorderBrush="#2a3f5f" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧筛选区 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="开始时间:" Foreground="#a0b0c0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker SelectedDate="{Binding StartDate}" Width="110" Height="28" VerticalContentAlignment="Center" Margin="0,0,2,0"/>
                    <TextBox Text="{Binding SearchStartTime}" Width="70" Height="28" VerticalContentAlignment="Center" 
                             Background="#11FFFFFF" Foreground="White" BorderBrush="#44FFFFFF" Padding="2,0" Margin="0,0,15,0"
                             ToolTip="格式 HH:mm:ss"/>

                    <TextBlock Text="结束时间:" Foreground="#a0b0c0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker SelectedDate="{Binding EndDate}" Width="110" Height="28" VerticalContentAlignment="Center" Margin="0,0,2,0"/>
                    <TextBox Text="{Binding SearchEndTime}" Width="70" Height="28" VerticalContentAlignment="Center" 
                             Background="#11FFFFFF" Foreground="White" BorderBrush="#44FFFFFF" Padding="2,0" Margin="0,0,15,0"
                             ToolTip="格式 HH:mm:ss"/>
                    
                    <TextBlock Text="关键字:" Foreground="#a0b0c0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding Keyword}" Width="180" Height="28" VerticalContentAlignment="Center" 
                             Background="#11FFFFFF" Foreground="White" BorderBrush="#44FFFFFF" Padding="5,0"/>
                </StackPanel>

                <!-- 右侧按钮区 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="查询" Command="{Binding SearchCommand}" 
                            Style="{StaticResource ActionButton}" Background="#1976d2" BorderThickness="0" Width="80"/>
                    <Button Content="重置" Command="{Binding ResetCommand}" 
                            Style="{StaticResource ActionButton}" Background="#455a64" BorderThickness="0" Width="80"/>
                    <Button Content="导出" Command="{Binding ExportCommand}" 
                            Style="{StaticResource ActionButton}" Background="#2e7d32" BorderThickness="0" Width="80"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 2. 数据表格 -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Logs}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                  Background="#151921" BorderThickness="1" BorderBrush="#2a3f5f"
                  RowHeight="35" FontSize="14">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#1e2430"/>
                    <Setter Property="Foreground" Value="#a0b0c0"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#2a3f5f"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#e0e0e0"/>
                    <Style.Triggers>
                        <!-- 鼠标悬停高亮 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2a3245"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Log ID" Binding="{Binding ID}" Width="80" ElementStyle="{StaticResource CenterText}"/>
                <DataGridTextColumn Header="记录时间" Binding="{Binding LogTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" Width="180" ElementStyle="{StaticResource CenterText}"/>
                <DataGridTextColumn Header="类型" Binding="{Binding LogTypeDisplay}" Width="80" ElementStyle="{StaticResource CenterText}"/>
                <DataGridTextColumn Header="设备" Binding="{Binding DeviceID}" Width="80" ElementStyle="{StaticResource CenterText}"/>
                <DataGridTextColumn Header="地址" Binding="{Binding Address}" Width="120" ElementStyle="{StaticResource CenterText}"/>
                <DataGridTextColumn Header="值" Binding="{Binding ValDisplay}" Width="60" ElementStyle="{StaticResource CenterText}"/>
                <DataGridTextColumn Header="消息内容" Binding="{Binding Message}" Width="*" ElementStyle="{StaticResource LeftText}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 3. 底部翻页栏 -->
        <Border Grid.Row="2" Background="#1e2430" CornerRadius="0,0,5,5" 
                BorderBrush="#2a3f5f" BorderThickness="1,0,1,1" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="总记录数:" Foreground="#a0b0c0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalCount}" Foreground="White" FontWeight="Bold" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    <TextBlock Text="条" Foreground="#a0b0c0" VerticalAlignment="Center" Margin="2,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="第" Foreground="#a0b0c0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentPage}" Foreground="White" FontWeight="Bold" Margin="5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="/" Foreground="#a0b0c0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalPages}" Foreground="White" Margin="5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="页" Foreground="#a0b0c0" VerticalAlignment="Center" Margin="0,0,15,0"/>

                    <Button Content="上一页" Command="{Binding PrevPageCommand}" 
                            Style="{StaticResource ActionButton}" Height="25" Width="70" Background="#37474f"/>
                    <Button Content="下一页" Command="{Binding NextPageCommand}" 
                            Style="{StaticResource ActionButton}" Height="25" Width="70" Background="#37474f"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 加载遮罩 -->
        <Grid Grid.Row="1" Background="#88000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="正在查询数据..." Foreground="White" FontSize="16" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
