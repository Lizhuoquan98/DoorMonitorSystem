<Window x:Class="DoorMonitorSystem.Views.UserInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="用户信息" Height="320" Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border Background="#E6112233" BorderBrush="#00FFFF" BorderThickness="1" CornerRadius="10" Padding="25">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.8"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/> <!-- Info -->
                <RowDefinition Height="Auto"/>    <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="用户信息" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,25"/>

            <!-- Info -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,0,0,20">
                <!-- User Name Row -->
                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="当前用户：" Foreground="#AAAAAA" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" Text="{Binding Username}" Foreground="White" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" TextWrapping="Wrap"/>
                </Grid>

                <!-- Role Row -->
                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="角色权限：" Foreground="#AAAAAA" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Border Grid.Column="1" Background="#3300FF00" CornerRadius="4" HorizontalAlignment="Left" Padding="10,2">
                        <TextBlock Text="{Binding Role}" Foreground="#00FF00" FontSize="16" FontWeight="Bold"/>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Vertical" VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Switch User -->
                    <Button Grid.Column="0" Content="切换账号" Height="40" Margin="10" FontSize="16"
                            Click="BtnSwitch_Click"
                            Style="{StaticResource ButtonNavigation}" Background="#33FFFFFF"/>
                    
                    <!-- User Mgmt -->
                    <Button Grid.Column="1" Content="用户管理" Height="40" Margin="10" FontSize="16"
                            x:Name="BtnManage"
                            Click="BtnManage_Click"
                            Style="{StaticResource ButtonNavigation}" Background="#330055AA"/>
                </Grid>
                
                <!-- Close Button -->
                <Button Content="关闭窗口" Height="35" Margin="0,15,0,0" Click="BtnClose_Click" 
                        Foreground="White" FontSize="14" FontWeight="Bold"
                        Style="{StaticResource ActionButton}" Background="#22FFFFFF" BorderBrush="#66FFFFFF" BorderThickness="1"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
