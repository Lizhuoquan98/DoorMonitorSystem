<Window x:Class="DoorMonitorSystem.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="用户登录" Height="380" Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border CornerRadius="8" Background="#EE0B1A28" BorderBrush="#0088AA" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="8" Opacity="0.8"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title -->
                <RowDefinition Height="*"/>    <!-- Inputs -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title Area -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="DOOR MONITOR" Foreground="#00CCFF" FontSize="26" FontFamily="Impact" HorizontalAlignment="Center"/>
                <TextBlock Text="系统登录" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Inputs -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                
                <!-- Username -->
                <TextBlock Text="用户名" Foreground="#AAAAAA" FontSize="14" Margin="0,0,0,5"/>
                <Border Background="#22FFFFFF" CornerRadius="4" Height="40" Margin="0,0,0,15">
                    <Grid>
                        <ComboBox x:Name="ComboUser" 
                                  IsEditable="True"
                                  BorderThickness="0" Background="Transparent"
                                  Foreground="Black" FontSize="16"
                                  VerticalContentAlignment="Center" Padding="10,0"
                                  DisplayMemberPath="Username"
                                  SelectedValuePath="Username"/>
                    </Grid>
                </Border>

                <!-- Password -->
                <TextBlock Text="密码" Foreground="#AAAAAA" FontSize="14" Margin="0,0,0,5"/>
                <Border Background="#22FFFFFF" CornerRadius="4" Height="40" Margin="0,0,0,10">
                    <PasswordBox x:Name="TxtPassword"
                                 BorderThickness="0" Background="Transparent"
                                 Foreground="Black" FontSize="16"
                                 VerticalContentAlignment="Center" Padding="10,0"/>
                </Border>
                
                <TextBlock x:Name="LblError" Text="" Foreground="#FF4444" FontSize="12" Height="16" Margin="0,5"/>
            </StackPanel>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="取消" Grid.Column="0" Height="45" Margin="0,0,10,0" 
                        Click="BtnCancel_Click"
                        Foreground="#CCCCCC" Background="Transparent" BorderBrush="#44FFFFFF" BorderThickness="1"
                        FontSize="16">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="登录" Grid.Column="1" Height="45" Margin="10,0,0,0" 
                        Click="BtnLogin_Click"
                        Foreground="White"  FontSize="16" FontWeight="Bold" BorderThickness="0">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#0066AA" Offset="0"/>
                            <GradientStop Color="#00AACC" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                     <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
