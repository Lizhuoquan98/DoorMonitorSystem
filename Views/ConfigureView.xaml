                             IsColesDoor="{Binding IsColesDoor }"
                             IsColesingDoor="{Binding IsColesingDoor }"
                             IsAlarm ="{Binding IsAlarm}"                             
                             IsFault="{Binding IsFault}"
                             IsOfflineDoor="{Binding IsOfflineDoor}" 
                             Command="{Binding DoorCommand}" 
                             CommParameter="{Binding DoorParameter}" />
        </DataTemplate>
