    <ItemsControl ItemsSource="{Binding Stations[0].DoorGroups}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <StackPanel>
                    <TextBlock Text="{Binding GroupName}" FontWeight="Bold"/>
                    <ItemsControl ItemsSource="{Binding Doors}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Width="800" Height="500">
                                    <TextBlock Text="{Binding HeaderText}" Width="80"/>
                                    <ItemsControl ItemsSource="{Binding BitList}" Width="800" Height="500" >
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Ellipse Width="16" Height="16" 
                                                     Fill="{Binding HeaderBackground}" 
                                                     Stroke="Black" StrokeThickness="1"
                                                     Margin="2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>

</UserControl>
