<Window x:Class="DoorMonitorSystem.Views.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DoorMonitorSystem.ViewModels"
        Title="用户管理" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.DataContext>
        <vm:UserManagementViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
        </Style>
        <Style TargetType="TextBlock">
             <Setter Property="Foreground" Value="#CCC"/>
             <Setter Property="VerticalAlignment" Value="Center"/>
             <Setter Property="Margin" Value="0,0,10,10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="#666" BorderThickness="1" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E1E" BorderBrush="#0088AA" BorderThickness="1" CornerRadius="4">
        <Grid>
            <!-- Title Bar / Close Button -->
            <Grid VerticalAlignment="Top" Height="40" Background="#252525" MouseDown="TitleBar_MouseDown">
                <TextBlock Text="用户管理面板" Foreground="#00CCFF" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0"/>
                <Button Content="✕" Width="40" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"
                        Background="Transparent" BorderThickness="0" Foreground="#AAA" Click="BtnClose_Click"/>
            </Grid>

            <!-- Main Content (Copied from UserManagementView) -->
            <Grid Margin="0,40,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left List Panel -->
                <Border Grid.Column="0" BorderBrush="#333" BorderThickness="0,0,1,0" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="用户列表" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,20,0"/>
                            <Button Content="刷新" Width="60" Height="26" Command="{Binding CreateCommand}" ContentStringFormat="新建" Background="#2196F3" BorderBrush="#2196F3"/>
                        </StackPanel>

                        <ListBox Grid.Row="1" ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" Background="Transparent" BorderThickness="0" Foreground="White">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" Background="#3F51B5" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding Username, StringFormat={}{0:1}}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Foreground="White"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Username}" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0"/>
                                            <TextBlock Text="{Binding Role}" FontSize="12" Foreground="#AAA" Margin="0"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Right Detail Panel -->
                <Border Grid.Column="1" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding EditTitle}" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel MaxWidth="400" HorizontalAlignment="Left">
                                
                                <TextBlock Text="用户名" />
                                <TextBox Text="{Binding FormUsername, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="真实姓名" />
                                <TextBox Text="{Binding FormRealName, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="密码" />
                                <TextBox Text="{Binding FormPassword, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Text="角色" />
                                <ComboBox ItemsSource="{Binding Roles}" SelectedItem="{Binding FormRole}" Height="30" Margin="0,0,0,10"/>

                                <CheckBox IsChecked="{Binding FormIsEnabled}" Content="启用账号" Foreground="White" Margin="0,10"/>
                                
                                <!-- Permissions Placeholder -->
                                <GroupBox Header="权限配置 (示例)" BorderBrush="#555" Foreground="White" Margin="0,20,0,0" Padding="10">
                                    <StackPanel>
                                        <CheckBox Content="系统配置 (System Configuration)" Foreground="#DDD" Margin="0,5" IsChecked="True"/>
                                        <CheckBox Content="用户管理 (User Management)" Foreground="#DDD" Margin="0,5"/>
                                        <CheckBox Content="门控操作 (Door Control)" Foreground="#DDD" Margin="0,5"/>
                                        <CheckBox Content="日志查看 (Log Viewing)" Foreground="#DDD" Margin="0,5"/>
                                    </StackPanel>
                                </GroupBox>

                            </StackPanel>
                        </ScrollViewer>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="删除" Command="{Binding DeleteCommand}" Background="#F44336" BorderBrush="#F44336"/>
                            <Button Content="取消" Command="{Binding CancelCommand}"/>
                            <Button Content="保存" Command="{Binding SaveCommand}" Background="#4CAF50" BorderBrush="#4CAF50" Width="100"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
