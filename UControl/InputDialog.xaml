<Window x:Class="DoorMonitorSystem.UControl.InputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoorMonitorSystem.UControl"
             mc:Ignorable="d" 
            WindowStartupLocation="CenterScreen" 
          WindowStyle="None" 
            Height="119" Width="180">


    <Grid>
        <!-- 提示标签，用于显示提示信息 -->
        <Label x:Name="lblPrompt" Content="请输当前用户密码" Margin="10" VerticalAlignment="Top"/>
        <!-- 文本输入框，用户在此输入文本 -->
        <TextBox x:Name="txtInput" Margin="10,40,10,0" VerticalAlignment="Top"/>
        <!-- 确定按钮，点击后获取输入文本并关闭对话框 -->
        <Button Content="确定" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="70" Click="btnOk_Click"/>
        <!-- 取消按钮，点击后关闭对话框，不获取输入文本 -->
        <Button Content="取消" HorizontalAlignment="Right" Margin="0,80,10,0" VerticalAlignment="Top" Width="70" Click="btnCancel_Click"/>
    </Grid>
</Window>
